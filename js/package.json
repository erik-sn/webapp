{
  "name": "webapp-javascript",
  "version": "1.4.1",
  "description": "React Boilerplate with support for Redux, Hot Reloading, Routing, Isomorphic rendering, Eslint, SCSS, Testing",
  "main": "index.js",
  "repository": "https://github.com/erik-sn/webapp.git",
  "scripts": {
    "new": "babel-node ./config/new_component.js",
    "dev": "babel-node ./config/server.js",
    "test": "jest",
    "tdd": "jest --watchAll",
    "cover": "jest --coverage",
    "lint": "eslint --fix --ext .js src",
    "compile": "babel src --out-dir dist",
    "prebuild": "npm run lint && npm run test && npm run compile",
    "build": "webpack --config ./config/webpack.production.config.js --progress --profile --colors",
    "prestart": "babel ./config/server.production.js --out-file ./config/server.final.js",
    "start": "node ./config/server.final.js"
  },
  "author": "Erik Niehaus",
  "license": "MIT",
  "jest": {
    "testPathIgnorePatterns": [
      "helper.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/app.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.24.1",
    "babel-core": "6.21.0",
    "babel-eslint": "7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "6.2.10",
    "babel-preset-latest": "6.16.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-0": "6.16.0",
    "chai": "^3.5.0",
    "codecov": "^2.1.0",
    "css-loader": "^0.28.0",
    "dotenv": "^4.0.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "istanbul": "1.0.0-alpha.2",
    "jest-cli": "^19.0.2",
    "jsdom": "^9.9.1",
    "json-loader": "^0.5.4",
    "node-sass": "^4.3.0",
    "postcss-loader": "^1.2.2",
    "react-hot-loader": "v3.0.0-beta.6",
    "sass-loader": "^6.0.3",
    "sinon": "^2.1.0",
    "style-loader": "^0.16.1",
    "webpack": "^2.4.1",
    "webpack-bundle-analyzer": "^2.3.1",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "es6-promise": "^4.1.0",
    "express": "^4.15.2",
    "history": "^4.6.1",
    "morgan": "^1.8.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.3",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "5.0.0-alpha.4",
    "react-test-renderer": "^15.5.4",
    "redux": "^3.6.0",
    "redux-promise": "^0.5.3"
  }
}
